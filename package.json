{
  "name": "mvc-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate para estrutura MVC em JavaScript com PostgreSQL e testes",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "migrate:dev": "node scripts/runMigration.js dev",
    "migrate:prod": "node scripts/runMigration.js prod",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "ejs": "^3.1.10",
    "express": "^4.17.1",
    "joi": "^17.13.3",
    "pg": "^8.7.1"
  },
  "devDependencies": {
    "jest": "^27.0.6",
    "nodemon": "^3.1.10",
    "supertest": "^6.1.3"
  }
}
