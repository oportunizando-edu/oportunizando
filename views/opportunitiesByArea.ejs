        <!--Card de oportunidades-->
        <div class="flex-wrap gap-6 w-full sm:w-1/2">
        <% opportunities.forEach( opportunity => {%>
            <%- include('partials/opportunityCard.ejs', {opportunity}) %>
        <% })%>
        </div>
    </main>
    
</body>
</html>