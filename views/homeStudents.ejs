<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - Estudantes</title>
    <!--Adicionar o Tailwind usando o cdn-->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    
    <!--Seção de minhas categorias-->
    <% if(isLogged) {%>
        <section>
            <div class="flex justify-between m-8 flex flex-col sm:flex-row gap-4">
                <h1 class="w-1/2 text-3xl text-[#5F37B5]">
                    Minhas Categorias
                </h1>
                <div class="sm:w-2/6 flex justify-between items-center  bg-[#5F37B5] text-white rounded-md p-4 sm:p-6 py-8 gap-2">
                    <span class="w-1/6">
                        Filtrar
                    </span>
                    <select class="w-5/6 bg-white text-black text-opacity-50 p-2 py-4 rounded-lg">
                        <option value="none">Categoria</option>
                        <% areasByStudent.forEach( area => { %>
                            <option value="<%= area.title%>"><%= area.title.charAt(0).toUpperCase() + area.title.slice(1)%></option>
                        <% }) %>
                    </select>
                </div>
            </div>

            <div class="flex flex-wrap justify-evenly sm:justify-start mx-8 gap-4 my-12">
            <% areasByStudent.forEach( area => { %>
                <a href="/opportunities/<%= area.id%>" class="rounded-md bg-[#5F37B5] text-white font-bold p-12 sm:p-24 py-8 sm:py-12 shadow-md sm:w-1/4 flex justify-center border-yellow-200 border-[3px]">
                    <p class="text-center">
                    <%= area.title.charAt(0).toUpperCase() + area.title.slice(1)%>
                    </p>
                </a>
            <% })%>
        </div>
        </section>
    <%} else {%>
        <p class="mx-8 m-8 mb-12 text-center text-xl text-[#5F37B5]">Cadastre-se no site para analisar as suas categorias favoritas</p>
    <% } %>

    <!--Seção de explorar categorias-->
    <section>
        <div class="flex justify-between m-8 flex flex-col sm:flex-row gap-4">
            <h1 class="w-1/2 text-3xl text-[#5F37B5]">
                Explorar
            </h1>
            <div class="sm:w-2/6 flex justify-between items-center  bg-[#5F37B5] text-white text-lg rounded-md p-4 sm:p-6 py-4 sm:py-8 gap-2">
                <span class="w-1/6">
                    Filtrar
                </span>
                <form action="/homeStudents" method="POST" class="w-5/6">
                    <select name="area" onchange="this.form.submit()" class="w-full bg-white text-black text-opacity-50 p-2  rounded-lg">
                        <option value="none">Categoria</option>
                        <% areas.forEach( area => { %>
                            <option value="<%= area.title%>"><%= area.title.charAt(0).toUpperCase() + area.title.slice(1)%></option>
                        <% }) %> 
                    </select>
                </form>
            </div>
        </div>

        <div class="flex flex-wrap justify-evenly sm:justify-start mx-8 gap-4 my-12">
            <% if(areasByTitle) {%>
                     <% areasByTitle.forEach( area => { %>
                    <a href="/opportunities/<%= area.id%>" class="rounded-md bg-[#5F37B5] text-white font-bold p-12 sm:p-24 py-8 sm:py-12 shadow-md sm:w-1/4 flex justify-center border-yellow-200 border-[3px]">
                        <p class="text-center">
                        <%= area.title.charAt(0).toUpperCase() + area.title.slice(1)%>
                        </p>
                    </a>
                    <%})%>
            <%} else {%>
                <% areas.forEach( area => { %>
                    <a href="/opportunities/<%= area.id%>" class="rounded-md bg-[#5F37B5] text-white font-bold p-12 sm:p-24 py-8 sm:py-12 shadow-md sm:w-1/4 flex justify-center border-yellow-200 border-[3px]">
                        <p class="text-center">
                        <%= area.title.charAt(0).toUpperCase() + area.title.slice(1)%>
                        </p>
                    </a>
            <% })}%>
        </div>
    </section>

</body>
</html>