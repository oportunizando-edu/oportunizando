<script>
  // Scroll suave para o carrossel
  const scrollDiv = document.getElementById('categoriasScroll');
  document.getElementById('scrollLeft').onclick = () => {
    scrollDiv.scrollBy({ left: -340, behavior: 'smooth' });
  };
  document.getElementById('scrollRight').onclick = () => {
    scrollDiv.scrollBy({ left: 340, behavior: 'smooth' });
  };

  // Carrossel de histórias de sucesso
  const cards = document.querySelectorAll('.success-card');
  let current = 0;
  function showCard(idx) {
    cards.forEach((el, i) => {
      el.classList.toggle('d-none', i !== idx);
      el.classList.toggle('d-flex', i === idx);
    });
  }
  document.getElementById('successLeft').onclick = () => {
    current = (current - 1 + cards.length) % cards.length;
    showCard(current);
  };
  document.getElementById('successRight').onclick = () => {
    current = (current + 1) % cards.length;
    showCard(current);
  };
  showCard(current);
</script>